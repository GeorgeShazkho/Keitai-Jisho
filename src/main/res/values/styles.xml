<resources>

    <!--
    KEITAI JISHO PROJECT
    Resource File: Styles

    @version    1.0 alpha 150313
    @author     George Shazkho
    @since      March 09, 2015
    -->


    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/AppTheme.primaryColor</item>
        <item name="colorPrimaryDark">@color/AppTheme.primaryColor_dark</item>
        <item name="colorAccent">@color/AppTheme.accentColor</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#aaaaaa</item>
    </style>


    <!-- Common UI Elements -->


    <style name="AppTheme.SpinnerStyle" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/AppTheme.text_base</item>
    </style>

    <style name="AppTheme.SpinnerStyle.Bold" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@color/AppTheme.text_base</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:textSize">30sp</item>
    </style>


    <!-- Interface Styling -->

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="KanjiElement" parent="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">2dp</item>
    </style>


    <!-- Additional style definitions -->

    <style name="AppTheme.buttonAccent">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/theme_textColor_inverse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="AppTheme.buttonAccent.inverse">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/AppTheme.text_base</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">36dp</item>
    </style>

</resources>
