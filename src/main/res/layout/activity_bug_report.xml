<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.shazkho.utils.keitaijisho.report.BugReportActivity">

    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"
        android:id="@+id/report_focus_thief"
        android:orientation="horizontal"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/report_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/AppTheme.ActionBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:title=""
        android:layout_alignParentTop="true"
        android:titleTextStyle="@style/AppTheme.ActionBar.TitleTextStyle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/report_toolbar">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/report_form"
            android:background="@color/AppTheme.background_light"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/report_type"
                android:background="@drawable/divider_underline"
                android:paddingTop="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/report_type_label"
                    android:text="CLASIFICATION"
                    android:textSize="12sp"
                    android:textColor="@color/AppTheme.text_disabled_hint" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/report_type_spinner"
                    android:layout_below="@+id/report_type_label"
                    style="@style/AppTheme.SpinnerStyle"
                    android:layout_marginLeft="-8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/report_urgency"
                android:layout_below="@+id/report_type"
                android:background="@drawable/divider_underline"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRIORITY"
                    android:id="@+id/report_urgency_label"
                    android:textSize="12sp"
                    android:textColor="@color/AppTheme.text_disabled_hint"
                    android:layout_marginTop="16dp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:id="@+id/report_urgency_spinner"
                    android:layout_below="@+id/report_urgency_label"
                    style="@style/AppTheme.SpinnerStyle"
                    android:layout_marginLeft="-8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/report_detail"
                android:layout_below="@+id/report_urgency"
                android:background="@color/AppTheme.background_light"
                android:paddingTop="16dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    android:id="@+id/report_detail_field"
                    android:nextFocusLeft="@id/report_detail_field"
                    android:nextFocusUp="@id/report_detail_field"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:background="@drawable/edittext_underline"
                    android:minHeight="120dp"
                    android:hint="Describe the bug here"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="top"
                    android:textColorHint="@color/AppTheme.text_disabled_hint"
                    android:textColorHighlight="@color/AppTheme.text_disabled_hint" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/report_auto_info"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/report_detail"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LOCAL INFORMATION (WILL BE SENT)"
                    android:id="@+id/report_auto_label"
                    android:textSize="12dp"
                    android:textColor="@color/AppTheme.text_disabled_hint"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/report_auto_android_version"
                    android:layout_below="@+id/report_auto_label"
                    android:textColor="@color/AppTheme.text_secondary_icons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keitai Jisho "
                    android:id="@+id/report_auto_app_version"
                    android:layout_below="@+id/report_auto_android_version"
                    android:textColor="@color/AppTheme.text_secondary_icons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device: "
                    android:id="@+id/report_auto_device"
                    android:layout_below="@+id/report_auto_app_version"
                    android:textColor="@color/AppTheme.text_secondary_icons" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/report_shadow"
        android:layout_below="@+id/report_toolbar"
        android:background="@drawable/shadow">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:id="@+id/report_form_shadow"
        android:background="@drawable/shadow"
        android:layout_below="@+id/report_form"
        android:alpha="0.15">
    </RelativeLayout>



</RelativeLayout>