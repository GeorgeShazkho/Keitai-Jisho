<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    KEITAI JISHO PROJECT
    Resource File: Xml (Settings Activity Preferences)
    NOTE: Translations will not be commented

    @version    1.0 alpha 150315
    @author     George Shazkho
    @since      March 15, 2015
    -->


    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <PreferenceCategory
        android:title="@string/pref_display_settings_header"
        android:key="pref_key_display_settings">
        <ListPreference
            android:key="pref_key_theme"
            android:title="@string/pref_title_select_theme"
            android:defaultValue="base"
            android:entries="@array/pref_theme_titles"
            android:entryValues="@array/pref_theme_values"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_information_header"
        android:key="pref_key_information">


        <Preference
            android:key="pref_key_report"
            android:title="@string/pref_title_report"
            android:summary="">
        </Preference>

        <Preference
            android:key="pref_key_about"
            android:title="@string/pref_title_about"
            android:summary="">
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>
