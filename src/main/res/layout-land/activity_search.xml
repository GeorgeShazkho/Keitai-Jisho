<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:focusable="true"
    android:background="@color/AppTheme.background_light_deep">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/search_toolbar_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/search_toolbar_extension"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layerType="none" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/search_toolbar_background_image"
            android:src="@drawable/fondo_2"
            android:scaleType="centerCrop"
            android:scrollY="-50dp" />
    </RelativeLayout>

    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px"
        android:id="@+id/search_focus_thief"
        android:orientation="horizontal"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/search_toolbar"
        android:layout_height="56dp"
        android:layout_width="fill_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/transparent"
        app:theme="@style/AppTheme.ActionBarStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:titleTextStyle="@style/AppTheme.ActionBar.TitleTextStyle"/>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/search_toolbar_extension"
        android:background="@color/transparent"
        android:layout_below="@+id/search_toolbar" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keitai Jisho"
            android:id="@+id/textView"
            android:layout_marginLeft="72dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:textSize="28sp"
            android:textColor="#ffffffff"
            android:layout_alignParentTop="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_form"
        android:layout_below="@+id/search_toolbar_extension"
        android:background="@color/AppTheme.background_light"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/search_dict"
            android:layout_marginTop="28dp"
            android:layout_alignParentTop="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/search_dict_icon"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_book_inverse"
                android:layout_marginRight="32dp"
                android:alpha="0.6"
                android:background="@color/AppTheme.accentColor"
                android:scaleType="centerCrop"
                android:padding="-3dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/search_dict_spinnet_wrapper"
                android:layout_toRightOf="@+id/search_dict_icon"
                android:background="@drawable/divider_underline">

                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="56dp"
                    android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
                    android:id="@+id/search_dict_spinner"
                    android:spinnerMode="dropdown"
                    style="@style/AppTheme.SpinnerStyle"
                    android:paddingRight="16dp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/search_query"
            android:gravity="center_vertical"
            android:layout_below="@+id/search_dict">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/search_query_icon"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/ic_input_inverse"
                android:layout_marginRight="32dp"
                android:alpha="0.6"
                android:background="@color/AppTheme.accentColor"
                android:scaleType="centerCrop"
                android:padding="-3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="18dp"
                android:contentDescription="Enter here your search query" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/search_query_field"
                android:inputType="text"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:nextFocusLeft="@id/search_query_field"
                android:nextFocusUp="@id/search_query_field"
                android:hint="@string/search_searchBox_hint"
                android:imeOptions="actionSearch"
                android:imeActionId="10"
                style="@style/Base.Widget.AppCompat.EditText"
                android:gravity="bottom"
                android:textSize="24dp"
                android:textColorHint="#27000000"
                android:textColor="@color/AppTheme.text_base"
                android:background="@drawable/edittext_underline"
                android:paddingBottom="8dp"
                android:paddingRight="16dp"
                android:layout_toRightOf="@+id/search_query_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/search_english"
            android:layout_below="@+id/search_query"
            android:gravity="bottom">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/search_english_icon"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/ic_public_inverse"
                android:layout_marginRight="32dp"
                android:alpha="0.6"
                android:background="@color/AppTheme.accentColor"
                android:scaleType="centerCrop"
                android:padding="-3dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searching in :"
                android:id="@+id/search_english_label"
                android:layout_alignParentLeft="false"
                android:gravity="center_vertical|right"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/AppTheme.text_secondary_icons"
                android:layout_toRightOf="@+id/search_english_icon" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:id="@+id/search_english_spinner_wrapper"
                android:layout_toRightOf="@+id/search_english_label"
                android:background="@drawable/divider_underline"
                android:layout_alignParentBottom="true">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/search_english_spinner"
                    android:layout_alignParentRight="true"
                    style="@style/AppTheme.SpinnerStyle"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:id="@+id/search_shadow"
        android:background="@drawable/shadow"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/search_toolbar_extension">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:id="@+id/search_form_shadow"
        android:background="@drawable/shadow"
        android:layout_below="@+id/search_form"
        android:alpha="0.15">
    </RelativeLayout>

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/search_fab"
        android:background="@drawable/floating_action_button"
        android:layout_alignBottom="@+id/search_toolbar_extension"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-35dp"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_fab_icon"
            android:background="@mipmap/ic_search_fab"
            android:alpha="0.9"/>
    </FrameLayout>

    <ViewStub
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_whatsnew"
        android:inflatedId="@+id/search_whatsnew_visible"
        android:layout="@layout/whatsnew" />

</RelativeLayout>
